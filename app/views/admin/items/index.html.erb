<!DOCTYPE html>
<p id="notice"></p>
　<div calss="row">
    <div class="col-md-8 offset-md-1">
      <h2>商品一覧　　　　　　　<%= link_to '新しい商品', new_admin_item_path %></h2>
      <table class="table  table-inverse">


        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税別価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>

            <% @items.each do |item| %>
        <tbody>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to admin_item_path(item) do %>
                  <%= item.name %>
                <% end %></td>
            <td><%= item.price %>円</td>
            <td><%= item.genre.name if item.genre.present? %></td>
            <td>
              <% if item.item_status %>
              <div class="text-secondary">販売停止中</div>
              <% else %>
              <div class="text-success">販売中</div>
              <% end %>
            </td>
          </tr>
        </tbody>
            <% end %>
<%= paginate @items %>
      </table>
    </div>
  </div>