<p>注文履歴一覧ページ（トップ）</p>

<% @orders.each do |order| %>
  <%= order.created_at.strftime('%Y/%m/%d') %>
  <%= order.customer.name_first %> <%= order.customer.name_second %>
  <%  @total = 0 %>
  <% order.order_details.each do |order_details| %>
    <% order_details.amount %>
    <% @total = @total+ order_details.amount %>
  <% end %>
  <%= @total %>
<% end %>