<!DOCTYPE html>
<p id="notice"></p>
<div class="container">
 <div class="row">
   <div class="col-sm-12 col-md-8  px-5 px-sm-0">
      <table class="table">
       <h5>ジャンル一覧・追加</h5>

       <%= form_with model: @genre, url: admin_genres_path, method: :post, local:true do |f| %>
       <!-- form_withにオプション追記する -->
       <td>ジャンル名</td>
       <td><%= f.text_field :name, placeholder:"ジャンル名" %></td>
       <td><%= f.submit '新規登録',class: "btn btn-success" %></td>
       <% end %>

       </table>
   </div>

   <div class="col-sm-12 col-md-8  px-5 px-sm-0 mx-auto">
       <table class="table table-striped">
         <tr>
           <th>ジャンル</th>
           <th></th>
        </tr>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td class="text-right"><%= link_to"編集する","genres/#{genre.id}/edit",class: "btn btn-success" %></td>
        </tr>
        <% end %>
       </table>
    </div>
  </div>
</div>