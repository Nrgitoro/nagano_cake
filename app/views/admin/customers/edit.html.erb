<h2><%= @customer.full_name %>さんの会員情報編集</h2>
<% if @customer.errors.any? %>
  <%= @customer.errors.count %>件の未記入がありました
  <ul>
    <% @customer.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
  <%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch do |f| %>


   <div>
     <td>会員ID</td>
     <td><%= @customer.id %></td>
   </div>



    <div class="field">
      氏名
      <%= f.text_field :name_first, autofocus: true %>
      <%= f.text_field :name_second %>
    </div>

    <div class="field">
      フリガナ
      <%= f.label :（セイ） %>
      <%= f.text_field :name_firdt_rubi %>
      <%= f.label :（メイ） %>
      <%= f.text_field :name_second_rubi %>
    </div>

    <div class="field">
      <%= f.label :郵便番号（ハイフンなし） %>
      <%= f.text_field :post_code %>
    </div>

    <div class="field">
      <%= f.label :住所 %>
      <%= f.text_field :address %>
    </div>

    <div class="field">
      <%= f.label :電話番号（ハイフンなし） %>
      <%= f.text_field :tel %>
    </div>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>

    <div>会員ステータス</div>


    <div class="actions">
      <%= f.submit "変更を保存" %>
    </div>
  <% end %>