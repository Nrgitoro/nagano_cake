<h2><%= @customer.full_name %>さんの会員情報編集</h2>

  <%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch do |f| %>


   <div>
     <td>会員ID</td>
     <td><%= @customer.id %></td>
   </div>



    <div class="field">
      氏名
      <%= f.text_field :name_first, autofocus: true %>
      <%= f.text_field :name_second %>
    </div>

    <div class="field">
      フリガナ
      <%= f.label :（セイ） %>
      <%= f.text_field :name_firdt_rubi %>
      <%= f.label :（メイ） %>
      <%= f.text_field :name_second_rubi %>
    </div>

    <div class="field">
      <%= f.label :郵便番号（ハイフンなし） %>
      <%= f.text_field :post_code %>
    </div>

    <div class="field">
      <%= f.label :住所 %>
      <%= f.text_field :address %>
    </div>

    <div class="field">
      <%= f.label :電話番号（ハイフンなし） %>
      <%= f.text_field :tel %>
    </div>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>

    <div class="field">
      <%= f.label :会員ステータス %>
    　<%= f.radio_button :is_deleted, true %>
    　<%= f.label :is_deleted, "退会", {value: :true, style: "display: inline-block;"} %>
    　<%= f.radio_button :is_deleted, false %>
      <%= f.label :is_deleted, "有効", {value: :false, style: "display: inline-block;"} %>
    </div>


    <div class="actions">
      <%= f.submit "変更を保存" %>
    </div>
  <% end %>