<!DOCTYPE html>

  <h2>注文履歴一覧</h2>
  <div class="container">
    <div class="row">
      <table class="table table-bordered table-condensed">
        <thead class="bg-secondary bg-gradient">
          <tr>
            <th class="border border-dark">注文日</th>
            <th class="border border-dark">配送先</th>
            <th class="border border-dark">注文商品</th>
            <th class="border border-dark">支払金額</th>
            <th class="border border-dark">ステータス</th>
            <th class="border border-dark">注文詳細</th>
          </tr>
        </thead>
        <% @order.each do |order| %>
        <tbody>
          <tr>
            <th>
              <%= order.created_at.strftime('%Y/%m/%d') %>
            </th>

            <th>
              <%= order.address_display %>
            </th>

            <th>
              <%= order.order_details %>
            </th>

            <th>
              <%= order.billing %>円
            </th>

            <th>
              <%= order.postal_code ? '入金確認' : '発送済み' %>
            </th>
          </tr>
        </tbody>
        <% end %>
      </table >
    </div>
  </div>
  <th>注文情報</th><br>