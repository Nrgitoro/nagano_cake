<!DOCTYPE html>
<p id="notice"></p>
<div class="container">
 <div class="row">
<table class="table table-striped">
  <h2>注文履歴一覧</h2>
</table>
      <div class="container">
        <div class="row">
        <table class="table  border border-dark">
          <thead class=" bg-gradient">
          <tr class="border border-dark">
            <th class="border border-dark">注文日</th>
            <th class="border border-dark">配送先</th>
            <th class="border border-dark">注文商品</th>
            <th class="border border-dark">支払金額</th>
            <th class="border border-dark">ステータス</th>
            <th class="border border-dark">注文詳細</th>
          </tr>
        </thead>


<% @orders.each do |order| %>
<tbody class="border border-dark">
  <tr>
  <td class="border border-dark"><%= order.created_at.strftime('%Y/%m/%d') %></td>
  <td class="border border-dark"><%= order.address_display %></td>
  <td class="border border-dark">
  <% order.order_details.each do |order_details| %>
   <%= order_details.item.name %>
  <% end %></td>
  <td class="border border-dark"><%= order.billing %></td>
  <td class="border border-dark">注文待ち</td>
  <td class="border border-dark"><%= link_to '表示する', order_path(order) %></td>
  </tr>
</tbody>
<% end %>
</table>
    </div>
  </div>