<th>注文情報</th><br>
<th>注文日<%= @order.created_at.strftime('%Y/%m/%d') %></th><br>
<th>配達先<%= @order.address_display %></th><br>
<th>支払方法<%= @order.payment_method %></th><br>
<th>ステータス</th><br>
<th>商品合計　<%= @total %></th><br>
<th>配送料 800</th><br>
<th>ご請求額　<%= @order.billing %></th><br>

<thead>
  <tr>
    <th>商品</th>
    <th>単価（税別）</th>
    <th>個数</th>
    <th>小計</th>
  </tr>
</thead><br>
<% @order_details.each do |order_details| %>
  <tbody>
    <tr>
      <td><%= order_details.item.name %></td>
      <td><%= order_details.item.with_tax_price %>円</td>
      <td><%= order_details.amount %></td>
      <td><%= order_details.item.with_tax_price*order_details.amount %></td>
    </tr>
  </tbody>
<% end %>









