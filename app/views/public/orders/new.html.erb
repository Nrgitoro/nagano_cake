<%= form_with model:@order, url: orders_confirm_path, method: :post, local: true do |f| %>

  <div class="field">
    <div class="radio-inline">支払い方法</div>
    <%= f.radio_button :payment_method, :credit_card %>
    クレジットカード
    <%= f.radio_button :payment_method, :transfer %>
    銀行振込
  </div>
  <%= f.radio_button :select_address, :me %>
  <%= f.label :address, "ご自身の住所", {value: :me, style: "display: inline-block;"} %>

  <%= f.radio_button :select_address, :already %>
  <%= f.label :address, "登録済住所から選択", {value: :arleady, style: "display: inline-block;"} %>
  <%= f.select :delivery_id, options_from_collection_for_select(current_customer.deliveries, :id, :name),include_blank: true %>

  <%= f.radio_button :select_address, :new %>
  <%= f.label :address, "新しいお届け先", {value: :new, style: "display: inline-block;"} %>
    <div class="form-group">
      <%= f.label :郵便番号 %>
      <%= f.text_field :postal_code, class: 'form-control oreder_postal_code' %>
    </div>
    <div class="form-group">
      <%= f.label :住所 %>
      <%= f.text_area :address, class: 'form-control order_address' %>
    </div>
    <div class="form-group">
      <%= f.label :宛名 %>
      <%= f.text_field :name, class: 'form-control order_name' %>
    </div>
    <%= f.submit class: 'btn btn-success' %>
<% end %>
