<%= form_with url: orders_confirm_path, method: :post, local: true do |f| %>

  <div class="field">
    <div class="radio-inline">支払い方法</div>
    <%= f.radio_button :payment_method, 0 %>
    クレジットカード
    <%= f.radio_button :payment_method, 1 %>
    銀行振込
  </div>

  <%= f.radio_button :address, :me %>
  <%= f.label :address, "ご自身の住所", {value: :me, style: "display: inline-block;"} %>

  <%= f.radio_button :address, :arleady %>
  <%= f.label :address, "登録済住所から選択", {value: :arleady, style: "display: inline-block;"} %>
  
  <%= f.radio_button :address, :new %>
  <%= f.label :address, "新しいお届け先", {value: :new, style: "display: inline-block;"} %>
  <!--新しいお届け先のform_with-->
  <%= form_with model:@order,local:true do |f| %>
    <div class="form-group">
      <%= f.label :郵便番号 %>
      <%= f.text_field :postal_code, class: 'form-control oreder_postal_code' %>
    </div>
    <div class="form-group">
      <%= f.label :住所 %>
      <%= f.text_area :address, class: 'form-control order_address' %>
    </div>
    <div class="form-group">
      <%= f.submit class: 'btn btn-success' %>
    </div>
  <% end %>
<% end %>
