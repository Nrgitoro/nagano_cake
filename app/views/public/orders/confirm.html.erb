<h2>オーダー一覧</h2>

<table class="table">
  <tr>
    <th>商品名</th>
    <th>単価</th>
    <th>数量</th>
    <th>小計</th>
  </tr>


  <tr>
    <th><% @cart_items.each do |cart_item| %>
    <tr>
      <th><%= cart_item.item.name %></th>
      <th><%= cart_item.item.with_tax_price %>円</th>
      <th><%= cart_item.amount %></th>
      <th><%= cart_item.subtotal %>円</th>
      <% @total = @total+ cart_item.subtotal %>
    </tr>
  <% end %>
  <tr><%= @total %></tr>
</table>
<tr>商品合計<%= @total %></tr>
<th>支払方法　<%= @order.payment_method_i18n %></th>
