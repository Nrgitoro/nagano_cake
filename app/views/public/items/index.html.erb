<div class = "container">
    <h3>商品一覧</h3>
    <p>(全 <%= @items.count %> 件)</p>
    
    <div class = "row" >

        <% @items.each do |item| %>
            <%= image_tag item.get_item_image(100,100) %>

            <span>
                <%= link_to item.name, item_path(item.id) %>
            </span>

            <p><%= item.price %>円</p>
    
        <% end %>    
    
    </div>
    <%= paginate @items %>
</div>