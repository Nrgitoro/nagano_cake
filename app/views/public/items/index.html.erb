<div class = "container px-5 px-sm-0" >
    <h3>商品一覧</h3>
    <p>(全 <%= @items.count %> 件)</p>
<div class = "row" >

<% @items.each do |item| %>
<%= image_tag item.get_item_image(100,100) %>

    <span>
        <%= item.name %>
    </span>

    <p><%= item.price %>円</p>
    
<% end %>    
    
</div>
    <%= paginate @item %>
</div>