<h3>配送先登録/一覧</h3>
<tr>
    <%= form_with model: Delivery.new do |f| %>
        <p>郵便番号(ハイフンなし)</p>
        <%= f.text_field :postal_code %>
        <p>住所</p>
        <%= f.text_field :address %> 
        <p>宛名</p>
        <%= f.text_field :name %>
        <%= f.submit '新規登録', class:"btn btn-success data-disable-with mt-4" %>
    <% end %>
</tr>
<table class = "table">
        <thead>
                <tr>
                <th>郵便番号</th>
                <th>住所</th>
                <th>宛名</th>
                <th></th>
            </tr>
        </thead>
    <tbody>
        <% @deliverys.each do |delivery| %>
            <tr>
                <td><%= delivery.post_code %></td>
                <td><%= delivery.address %></td>
                <td><%= delivery.name %></td>
                <td>
                    <%= link_to "編集する", edit_delivery_path(delivery.id) %>
                    <%= link_to "削除する", delivery_path(delivery.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>