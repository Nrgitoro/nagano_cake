<!DOCTYPE html>
<p id="notice"></p>
<div class="container">
<h3>配送先登録/一覧</h3>
<tr>
    <%= form_with model: Delivery.new do |f| %>
        郵便番号（ハイフンなし）　　　<%= f.text_field :postal_code %><br>
        <p></p>
        住所　　　　　　　　　　　　　<%= f.text_field :address %> <br>
        宛名　　　　　　　　　　　　　<%= f.text_field :name %>
        　　　<%= f.submit '新規登録', class:"btn btn-success data-disable-with mt-4" %>
    <% end %>
</tr>
<div class="container">
    <div class="row">
        <table class="table table-inverse border border-dark">
            <thead class="bg-secondary bg-gradient">
                <tr class="border border-dark">
                    <thead>
                        <tr>
                            <td class="border border-dark">郵便番号</tb>
                            <td class="border border-dark">住所</tb>
                            <td class="border border-dark">宛名</tb>
                            <td class="border border-dark"></tb>
                        </tr>
                    </thead>
                    <tbody>
                        <% @deliverys.each do |delivery| %>
                        <tr>
                            <td class="border border-dark"><%= delivery.postal_code %></td>
                            <td class="border border-dark"><%= delivery.address %></td>
                            <td class="border border-dark"><%= delivery.name %></td>
                            <td class="border border-dark"></tb>
                    
                            <%= link_to "編集する", edit_delivery_path(delivery.id),class: "btn btn-success" %>
                            <%= link_to "削除する", delivery_path(delivery.id),class: "btn btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %>
                        </tr>
                        <% end %>
                    </tbody>
                </tr>
            </thead>
        </table>
    </div>
</div>