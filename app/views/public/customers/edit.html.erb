<h2>会員情報編集</h2>

  <%= form_with model: @customer, url: customers_update_path, method: :patch do |f| %>
    <div class="field">
      氏名
      <%= f.text_field :name_first, autofocus: true %>
      <%= f.text_field :name_second %>
    </div>

    <div class="field">
      フリガナ
      <%= f.label :（セイ） %>
      <%= f.text_field :name_firdt_rubi %>
      <%= f.label :（メイ） %>
      <%= f.text_field :name_second_rubi %>
    </div>

    <div class="field">
      <%= f.label :郵便番号（ハイフンなし） %>
      <%= f.text_field :post_code %>
    </div>

    <div class="field">
      <%= f.label :住所 %>
      <%= f.text_field :address %>
    </div>

    <div class="field">
      <%= f.label :電話番号（ハイフンなし） %>
      <%= f.text_field :tel %>
    </div>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>


    <div class="actions">
      <%= f.submit "編集内容を保存" %>
    </div>
  <% end %>

