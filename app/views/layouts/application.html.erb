
<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

        <header>
    <nav class="navbar navbar-expand-lg navbar-dark  border-bottom">
      <div class="container">



        <a class="navbar-brand text-dark list-group-item">LOGO</a>
        <% if customer_signed_in? %>


            <li class=" p-1 border  list-group-item">

           <%= link_to homes_about_path, class:"nav nav-link text-dark" do %>About
            <% end %>
          </li>

          <li class=" p-1 border  list-group-item">
            <%= link_to  items_path, class:"nav-link text-dark" do %>商品一覧
            <% end %>
          </li>

          <li class=" p-1 border  list-group-item">
           <%= link_to  cart_items_path, class:"nav-link text-dark" do %>カート
            <% end %>
          </li>

          <li class=" p-1 border  list-group-item">
            <%= link_to destroy_customer_session_path, method: :delete, class:" nav-link text-dark" do %>ログアウト
            <% end %>
          </li>

          <% else %>
          <% if admin_signed_in? %>

        <li class=" p-1  border  list-group-item ">
            <%= link_to admin_items_path, class:'nav-link text-dark' do %>商品一覧
            <% end %>
         </li>

           <li class=" p-1  border  list-group-item ">
            <%= link_to admin_customers_path, class:'nav-link text-dark' do %>会員一覧
            <% end %>
          </li>

           <li class=" p-1  border  list-group-item ">
           <%= link_to admin_path, class:'nav-link text-dark' do %>注文履歴一覧
            <% end %>
          </li>

          <li class=" p-1  border  list-group-item ">
            <%= link_to admin_genres_path, class:'nav-link text-dark' do %>ジャンル一覧
            <% end %>
       </li>

          <li class=" p-1  border  list-group-item ">
            <%= link_to destroy_admin_session_path, method: :delete, class:'nav-link text-dark' do %>ログアウト
            <% end %>
          </li>
      <% else %>

          <%= render 'layouts/header' %>

         <% end %>
          <% end %>

        </ul>
      </div>
      </div>
    </nav>
    </header>

    <%= yield %>
  </body>
</html>